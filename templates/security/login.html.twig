{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

 {% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}


{% block header %} {% endblock %}

{% block body %}
<div class="ingreso">
    <section class="login">
        <div class="logo">
            <img src="{{ asset('images/logo.png')}}" alt="" srcset="">
        </div>
        <div class="form">
            <div class="form-title">
                <h2 class="title">
                    Iniciar sesión
                </h2>
                <p class="eslogan">
                    El poder de las imágenes para contar historias.
                </p>
            </div>
            <div class="form-inputs">
                <form method="POST" class="form">
                {% if app.user %}
                    <div class="error">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                    <div>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control inputs" placeholder="Correo" autocomplete="email" required autofocus>
                    </div>
                    <div>
                        <input type="password" name="password" id="inputPassword" class="form-control inputs" placeholder="Contraseña" autocomplete="current-password" required>
                    </div>
                    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                    {% if error %}
                        <div class="alert alert-danger error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <button class="submit" type="submit">Ingresar</button>
                </form>
            </div>
            <div class="separador"></div>
            <div class="singIn">
                <p>¿Todavía no tienes una cuenta?
                    <a class="link-singIn" href="{{path('app_register')}}">Registrarse</a>
                </p>
            </div>
        </div>
        <div class="copyright">
            <p class="copyright-text">© 2023 LevelMax-Gallery</p>
        </div>
    </section>
</div>
{% endblock %}

{% block footer %} {% endblock %}